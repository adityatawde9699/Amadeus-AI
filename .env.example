# =============================================================================
# Amadeus AI - Environment Configuration Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values.
# NEVER commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# API KEYS (Required)
# -----------------------------------------------------------------------------
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get your Weather API key from: https://openweathermap.org/api
WEATHER_API_KEY=your_weather_api_key_here

# Get your News API key from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# Default: SQLite for development
DATABASE_URL=sqlite:///./data/amadeus.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/amadeus

# Connection Pool Settings (for non-SQLite databases)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# -----------------------------------------------------------------------------
# SPEECH / VOICE
# -----------------------------------------------------------------------------
VOICE_ENABLED=true
WAKE_WORD=amadeus

# TTS Settings
TTS_RATE=150
TTS_VOICE_INDEX=1

# Whisper Speech Recognition
WHISPER_MODEL=tiny
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_BEAM_SIZE=1

# Speech Recognition Timeouts
SPEECH_RECOGNITION_TIMEOUT=5
SPEECH_PHRASE_TIME_LIMIT=10
SPEECH_ENERGY_THRESHOLD=4000
SPEECH_MIN_AUDIO_LENGTH=3200

# -----------------------------------------------------------------------------
# ASSISTANT IDENTITY
# -----------------------------------------------------------------------------
ASSISTANT_NAME=Amadeus
ASSISTANT_VERSION=2.0.0
ASSISTANT_PERSONALITY=helpful, concise, and friendly
DEFAULT_LOCATION=India
TIMEZONE=Asia/Kolkata

# -----------------------------------------------------------------------------
# CONVERSATION SETTINGS
# -----------------------------------------------------------------------------
CONVERSATION_MAX_HISTORY=20
CONVERSATION_MAX_TOKENS_ESTIMATE=4000
CONTEXT_SUMMARY_LENGTH=500

# -----------------------------------------------------------------------------
# TOOL EXECUTION
# -----------------------------------------------------------------------------
TOOL_MAX_RETRIES=3
TOOL_TIMEOUT=60

# -----------------------------------------------------------------------------
# API SERVER
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------------------------------------------
# SYSTEM MONITORING THRESHOLDS
# -----------------------------------------------------------------------------
CPU_WARNING_THRESHOLD=80
CPU_CRITICAL_THRESHOLD=95
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=95
DISK_WARNING_THRESHOLD=80
DISK_CRITICAL_THRESHOLD=95
BATTERY_LOW_THRESHOLD=20
BATTERY_CRITICAL_THRESHOLD=10

# -----------------------------------------------------------------------------
# FILE OPERATIONS
# -----------------------------------------------------------------------------
FILE_SEARCH_MAX_RESULTS=10
FILE_READ_MAX_CHARS=5000
APP_LAUNCH_TIMEOUT=15

# -----------------------------------------------------------------------------
# PRODUCTIVITY FEATURES
# -----------------------------------------------------------------------------
# Reminders
REMINDER_CHECK_INTERVAL=30
REMINDER_LOOP_STARTUP_TIMEOUT=5.0
REMINDER_LOOP_STOP_TIMEOUT=5.0

# Pomodoro
POMODORO_WORK_DURATION=25
POMODORO_SHORT_BREAK=5
POMODORO_LONG_BREAK=15
POMODORO_CYCLES_BEFORE_LONG_BREAK=4

# Calendar
CALENDAR_DEFAULT_EVENT_DURATION=60
CALENDAR_REMINDER_BEFORE_MINUTES=15
CALENDAR_MAX_EVENTS_DISPLAY=10
CALENDAR_DAYS_AHEAD_DEFAULT=7

# -----------------------------------------------------------------------------
# DISPLAY LIMITS
# -----------------------------------------------------------------------------
DISPLAY_PROCESSES_COUNT=10
DISPLAY_PROCESSES_VOICE_COUNT=5
DISPLAY_TEMPERATURE_SENSORS_LIMIT=3
DISPLAY_ALERTS_LIMIT=5

# -----------------------------------------------------------------------------
# SKIP VALIDATION (for testing)
# -----------------------------------------------------------------------------
SKIP_CONFIG_VALIDATION=false
